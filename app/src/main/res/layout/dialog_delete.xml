<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deleteDialogLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    android:padding="24dp"
    android:layoutDirection="ltr"
    android:textDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal">

        <!-- العنوان -->
        <TextView
            android:id="@+id/deleteDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Book"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:layout_marginBottom="16dp" />

        <!-- أيقونة الحذف -->

        <!-- الرسالة -->
        <TextView
            android:id="@+id/deleteMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this book?"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- أزرار التأكيد والإلغاء -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/confirmDeleteBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Yes"
                android:textColor="#070707"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cancelDeleteBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="No"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
