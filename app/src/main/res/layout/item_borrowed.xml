<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:backgroundTint="#0F0F0F"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- صورة الكتاب -->
        <ImageView
            android:id="@+id/imgBorrowedBook"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:contentDescription="Book Cover" />

        <!-- تفاصيل الكتاب -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/txtReservedBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Title"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/txtReservedBookAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author: "
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/txtReservedBookPublisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publisher"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/txtReservedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserved by: User"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/txtBorrowDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrowed: 2025-06-24"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- زر الإرجاع -->
        <Button
            android:id="@+id/btnReturnBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:backgroundTint="#EFB661"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:minWidth="80dp"
            android:minHeight="45dp"
            android:layout_marginStart="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
