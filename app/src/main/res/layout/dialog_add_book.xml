<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:background="@drawable/loadscreenbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:text="Add a New Book"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold" />

        <ImageView
            android:id="@+id/imgBookCover"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="Book Cover"
            android:scaleType="centerCrop"
            android:background="@drawable/button_background_round_normal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#5B5E59"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/etAddBookTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Book Name"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAddBookAuthor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Book Author"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAddBookDescription"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Book Description"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAddBookCategory"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Book Category"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:layoutDirection="ltr">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:fontFamily="@font/poppins_medium"
                android:textAllCaps="false"
                android:layout_marginEnd="40dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#151515" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:fontFamily="@font/poppins_medium"
                android:textAllCaps="false"
                android:backgroundTint="#FB1605"
                android:textColor="#131313" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
